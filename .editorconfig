# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = tab
indent_char = \t
indent_with_tabs = true
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{package.json, .travis.yml, appveyor.yml}]
indent_style = space
indent_size = 2
